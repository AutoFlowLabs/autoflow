{
  "compilerOptions": {
    "target": "esNext",
    "module": "commonjs",
    "lib": ["esNext", "dom"],
    "declaration": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
